@page
@model BankStartWeb.Pages.CustomersModel
@{
}

<h1>All Customers</h1>

<table class="table">
    <tr>
        <td>Id
            <a asp-page="/Customers" asp-route-col="id" asp-route-order="asc" >
                <i class='bx bx-sort-up'></i></a>
            <a asp-page="/Customers" asp-route-col="id" asp-route-order="desc" >
                <i class='bx bx-sort-down' ></i></a>
        </td>
        <td>Given Name
            <a asp-page="/Customers" asp-route-col="givenName" asp-route-order="asc" >
                <i class='bx bx-sort-up'></i></a>
            <a asp-page="/Customers" asp-route-col="givenName" asp-route-order="desc" >
                <i class='bx bx-sort-down' ></i></a>
        </td>
        <td>Sur Name
            <a asp-page="/Customers" asp-route-col="surName" asp-route-order="asc" >
                <i class='bx bx-sort-up'></i></a>
            <a asp-page="/Customers" asp-route-col="surName" asp-route-order="desc" >
                <i class='bx bx-sort-down' ></i></a>
        </td>
        <td>Street Address
            <a asp-page="/Customers" asp-route-col="streetAddress" asp-route-order="asc" >
                <i class='bx bx-sort-up'></i></a>
            <a asp-page="/Customers" asp-route-col="streetAddress" asp-route-order="desc" >
                <i class='bx bx-sort-down' ></i></a>
        </td>
    </tr>
    @foreach(var customer in Model.CustomersList)
    {
        <tr>    
            <td><a asp-route-id="@customer.Id" asp-page="/Customer">@customer.Id</a></td>
             <td>@customer.Givenname</td>
            <td>@customer.Surname</td>
            <td>@customer.Streetaddress</td>
        </tr>
        <td>
            <a asp-page="/Customer" asp-route-Id="@customer.Id">EDIT</a>
        </td>
    }
</table>